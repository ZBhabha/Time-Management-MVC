@model TimeWebApp.Model.Module

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModId" class="control-label">Module Code</label>
                <input asp-for="ModId" class="form-control" />
                <span asp-validation-for="ModId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModName" class="control-label">Module Name</label>
                <input asp-for="ModName" class="form-control" />
                <span asp-validation-for="ModName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumCredits" class="control-label">Number of Credits</label>
                <input asp-for="NumCredits" class="form-control" />
                <span asp-validation-for="NumCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassHours" class="control-label">Number of Class Hours</label>
                <input asp-for="ClassHours" class="form-control" />
                <span asp-validation-for="ClassHours" class="text-danger"></span>
            </div>
          
           
            <div class="form-group">
                <input type="submit" value="Add Module" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
