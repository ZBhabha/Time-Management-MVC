@model TimeWebApp.Model.StudentModule

@{
    ViewData["Title"] = "Create";
}

<h1>Add</h1>

<h4>Students Module Progress</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkDate" class="control-label"></label>
                <input asp-for="WorkDate" class="form-control" />
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkedHours" class="control-label"></label>
                <input asp-for="WorkedHours" class="form-control" />
                <span asp-validation-for="WorkedHours" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="ModId" class="control-label"></label>
                <select asp-for="ModId" class ="form-control" asp-items="ViewBag.ModId"></select>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Process" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
