@model IEnumerable<TimeWebApp.Model.DateModule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Schedule New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Module Date
            </th>
            <th>
                Module Code
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModId)
                </td>

                <td>
                  

                    <a asp-action="Delete" asp-route-id="@item.DateModuleId">Completed</a>
                </td>
            </tr>
        }
    </tbody>
</table>
